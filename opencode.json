{
  "$schema": "https://opencode.ai/config.json",
  "tools": {
    "grafana*": false,
  },
  "mcp": {
    "grafana": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-e",
        "GRAFANA_URL",
        "-e",
        "GRAFANA_USERNAME",
        "-e",
        "GRAFANA_PASSWORD",
        "mcp/grafana",
        "-t",
        "stdio"
      ],
      "enabled": true,
      "environment": {
        "GRAFANA_URL": "https://grafana.holdenitdown.net",
        "GRAFANA_USERNAME": "admin",
        "GRAFANA_PASSWORD": "{env:GRAFANA_PASSWORD}"
      }
    }
  }
}
